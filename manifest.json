{
  "manifest_version": 3,
  "name": "Adobe Auto Checkout",
  "version": "1.0.0",
  "description": "Automate Adobe checkout process with BIN-based CC generation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "https://commerce.adobe.com/*",
    "https://tokui-commerce.adobe.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://commerce.adobe.com/*"
      ],
      "js": [
        "lib/cc-generator.js",
        "content.js"
      ],
      "css": [
        "floating-popup.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "floating-popup.css",
        "lib/*"
      ],
      "matches": [
        "https://commerce.adobe.com/*"
      ]
    }
  ]
}